@page
@model PRACTICA3.Pages.Paginas.comprasModel

@{
    ViewData["Title"] = "compras";
}

<h1>Compras</h1>
@* FORMULARIO QUE HACE USO DEL MÉTODO POST PARA ENVIO DE PARAMETROS *@

<form method="post">
    <label for="cliente">Escoja el cliente: </label>
    <select asp-for="@Model.Cliente_id">
        @*Bucle para mostrar la lista de clientes (NOMBRE Y APELLIDO) *@

        @foreach (var item in Model.Clientes)
        {
            <option value="@item.ClienteID.ToString()">@item.Nombre @item.Apellido</option>
        }
    </select>
    <p>
        <a asp-page="/Paginas/Clientes/Create">Registrar Nuevo Usuario</a>
    </p>
    @* TABLA QUE MUESTRA LOS PRODUCTOS *@

    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Precio
                </th>
                <th>
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @* Bucle para mostrar la lista de productos *@

            @foreach (var item in Model.Productos)
            {
                <tr>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        @item.PrecioU
                    </td>
                    <td>
                        <input type="number" asp-for="@Model.Cantidad[i]" required>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <div class="btn_enviar">
        <button type="submit" class="btn-primary btn">Enviar</button>
    </div>
</form>
    

